<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mfarssac.moviedb">

    <!-- This permission is necessary in order for the Movie DB App to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--The manifest entry for our MainActivity. Each Activity requires a manifest entry-->
        <activity
            android:name="com.mfarssac.moviedb.mvvm.list.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Movie">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--The manifest entry for our DetailActivity. Each Activity requires a manifest entry-->
        <activity
            android:name="com.mfarssac.moviedb.mvvm.detail.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.mfarssac.moviedb.mvvm.list.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mfarssac.moviedb.mvvm.list.MainActivity"/>
        </activity>


        <!--This is required for immediate syncs -->
        <service
            android:name="com.mfarssac.moviedb.repository.network.MoviesSyncIntentService"
            android:exported="false" />

        <!-- This is the Service declaration used in conjunction with FirebaseJobDispatcher -->
        <service
            android:name="com.mfarssac.moviedb.repository.network.MoviesDBJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

    </application>
</manifest>